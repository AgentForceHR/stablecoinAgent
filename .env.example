# --- Gemini (free) ---
GEMINI_API_KEY=PASTE_YOUR_KEY
GEMINI_MODEL=gemini-1.5-flash

# --- Email (Gmail SMTP via App Password) ---
EMAIL_ENABLED=true
EMAIL_TO=youraddress@gmail.com
GMAIL_USER=youraddress@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# --- Behavior ---
